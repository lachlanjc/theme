    "@testing-library/react": "^11.1.1",
    "babel-jest": "^26.6.2",
    "jest": "^26.6.2",
    "lerna": "^3.22.1",
    "microbundle": "^0.12.4",
    "prettier": "^2.1.2"
  },
  "jest": {
    "testMatch": [
      "**/packages/**/test/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
